<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.sys.DictMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.demo.entity.sys.Dict">
        <result column="id" property="id" />
        <result column="label" property="label" />
        <result column="value" property="value" />
        <result column="style" property="style" />
        <result column="description" property="description" />
        <result column="create_by" property="createBy" />
        <result column="create_date" property="createDate" />
        <result column="update_by" property="updateBy" />
        <result column="update_date" property="updateDate" />
        <result column="del_flag" property="delFlag" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="BaseColumns">
        a.id,
        a.label,
        a.value,
        a.style,
        a.description,
        a.create_by,
        a.create_date,
        a.update_by,
        a.update_date,
        a.del_flag,
        a.remark
    </sql>

    <update id="delDict" parameterType="String">
        UPDATE sys_dict a
        SET a.del_flag = "0"
        WHERE a.id = #{id}
    </update>

    <select id="listPage" resultMap="BaseResultMap">
        SELECT
            <trim>
                <include refid="BaseColumns"></include>
            </trim>
        FROM sys_dict a
        <where>
            <if test="entity != null">
                <if test="entity.label != null and entity.label != ''">
                    a.label = #{entity.label}
                </if>
                <if test="entity.value != null and entity.value != ''">
                    a.value = #{entity.value}
                </if>
                <if test="entity.style != null and entity.style != ''">
                    a.style = #{entity.style}
                </if>
            </if>
            AND del_flag = "0"
        </where>
    </select>

    <select id="listOfLabel" resultMap="BaseResultMap">
        SELECT
            <trim>
                <include refid="BaseColumns"></include>
            </trim>
        FROM sys_dict a
        WHERE a.label = #{label}
        AND a.del_flag = "0"
    </select>

    <select id="listOfValue" resultMap="BaseResultMap">
        SELECT
            <trim>
                <include refid="BaseColumns"></include>
            </trim>
        FROM sys_dict a
        WHERE a.value = #{value}
        AND a.del_flag = "0"
    </select>

    <select id="listOfStyle" resultMap="BaseResultMap">
        SELECT
            <trim>
                <include refid="BaseColumns"></include>
            </trim>
        FROM sys_dict a
        WHERE a.style = #{style}
        AND a.del_flag = "0"
    </select>

</mapper>
